<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoucherActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Voucher Entry"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white"
            style="@style/Widget.Material3.Toolbar.Surface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Company Details (Context) -->
            <com.google.android.material.card.MaterialCardView
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center_horizontal">
                    
                    <ImageView
                        android:id="@+id/ivVoucherCompanyLogo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"/>
                    
                    <TextView
                        android:id="@+id/tvCompanyHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="4dp"/>
                        
                    <TextView
                        android:id="@+id/tvCompanyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address..."
                        android:textSize="12sp"/>
                        
                     <TextView
                        android:id="@+id/tvCompanyGST"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GST: "
                        android:textSize="12sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Voucher Type Selection -->
            <com.google.android.material.card.MaterialCardView
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <TextView
                        android:text="Select Voucher Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>
                        
                    <Spinner
                        android:id="@+id/spnVoucherType"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/border" /> 
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Party Details Card -->
            <TextView
                android:text="Party Details"
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:hint="Voucher No"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
    
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etVoucherNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
    
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:hint="Date"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
    
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="date" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPartyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Party A/c Name"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/actvPartyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilBankLedger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        android:hint="Select Bank (Optional)"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/actvBankLedger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Auto-filled Details -->
                    <LinearLayout
                        android:id="@+id/llPartyInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:visibility="gone">
                        
                        <TextView android:id="@+id/tvPartyAddress" android:text="Address: " android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/tvPartyMobile" android:text="Mobile: " android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/tvPartyGst" android:text="GST: " android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDeliveryNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Delivery Note / Narration"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDeliveryNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine" 
                    android:maxLines="3"/>
            </com.google.android.material.textfield.TextInputLayout>

             <!-- Dispatch Details Section -->
            <TextView
                android:text="Dispatch Details"
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_marginTop="16dp"/>

             <com.google.android.material.card.MaterialCardView
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <Button
                        android:id="@+id/btnToggleDispatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Show/Hide Dispatch Details"
                        style="@style/Widget.Material3.Button.TextButton"/>

                    <LinearLayout
                        android:id="@+id/llDispatchDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        

                         <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mode/Terms of Payment"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/etModePayment" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        
                         <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Reference No"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/etRefNo" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Other References"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/etOtherRef" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Buyer's Order No."
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/etBuyerOrderNo" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dispatch Doc No"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDispatchDocNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                         <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dated"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/etDeliveryNoteDate" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dispatch Through (Carrier)"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDispatchThrough"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Destination"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDestination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bill of Lading/LR-RR No."
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/etBillOfLading" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        
                         <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Motor Vehicle No"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMotorVehicleNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Terms of Delivery"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText android:id="@+id/etTermsDelivery" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        
                    </LinearLayout>
                </LinearLayout>
             </com.google.android.material.card.MaterialCardView>

            <!-- Inventory Items Section (Visible for Sales/Purchase) -->
            <LinearLayout
                android:id="@+id/llInventorySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                
                <TextView
                    android:text="Item Details"
                    style="@style/SectionHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
    
                <com.google.android.material.card.MaterialCardView
                    style="@style/DashboardCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
    
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Item Name"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
    
                            <AutoCompleteTextView
                                android:id="@+id/actvItemName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="HSN/SAC"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHsn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Qty"
                            android:layout_marginEnd="4dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etQuantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Unit"
                            android:layout_marginEnd="4dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etUnit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Rate"
                            android:layout_marginHorizontal="4dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="GST %"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etGstRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
    
                        <Button
                            android:id="@+id/btnAddItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Item"
                            android:layout_marginTop="12dp"
                            style="@style/Widget.Material3.Button.TonalButton"/>
    
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItems"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    tools:listitem="@layout/item_invoice_row"/>
            </LinearLayout>

            <!-- Total and Actions -->
            <com.google.android.material.card.MaterialCardView
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: â‚¹0.00"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:textColor="?attr/colorOnPrimaryContainer"/>

                    <!-- Charges Section -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutline"
                        android:layout_marginVertical="8dp"/>
                        
                    <TextView
                        android:text="Add. Charges / Taxes:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="italic"/>
                        
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCharges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_charge_row"
                        tools:itemCount="0"/>
                    
                    <Button
                        android:id="@+id/btnAddCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Add Charge"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_gravity="end"/>

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Voucher"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.Material3.Button"/>

                    <Button
                        android:id="@+id/btnViewPdf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Print &amp; Share PDF"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/btnExcelShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share Excel"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

