<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp">

    <TextView
        android:id="@+id/tvPrintSlNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:textSize="9sp"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/tvPrintName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="9sp"
        android:text="Item Name" />
        
    <TextView
        android:id="@+id/tvPrintRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:textSize="9sp"
        android:text="100.00" />

    <TextView
        android:id="@+id/tvPrintQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="end"
        android:textSize="9sp"
        android:text="10" />
        
    <TextView
        android:id="@+id/tvPrintUnit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:textSize="9sp"
        android:text="pcs" />

    <TextView
        android:id="@+id/tvPrintAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="end"
        android:textSize="9sp"
        android:text="1000.00" />
        
    <TextView
        android:id="@+id/tvPrintCgst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:textSize="9sp"
        android:text="90.00" />
        
    <TextView
        android:id="@+id/tvPrintSgst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:textSize="9sp"
        android:text="90.00" />    
</LinearLayout>
