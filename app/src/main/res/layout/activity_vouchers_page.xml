<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VouchersPage">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Voucher Types"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:background="?attr/colorPrimary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Voucher Type to Create"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnSalesV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sales Voucher"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp"/>
                
            <Button
                android:id="@+id/btnPurchaseV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purchase Voucher"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp"/>
                
            <Button
                android:id="@+id/btnPaymentV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Voucher"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp"/>
                
            <Button
                android:id="@+id/btnReceiptV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receipt Voucher"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnJournalV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Journal Voucher"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp"/>
                
            <Button
                android:id="@+id/btnContraV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contra Voucher"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>